<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            style="@style/h2_black"
            android:text="Quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"></TextView>
        <EditText
            android:id="@+id/noOfItems"
            modelPojoToUi="text = toString(noOfItems) from tradeItem->view"
            modelSyncEvents="onTextChange"
            modelUiToPojo="noOfItems = text into tradeItem->view"
            modelUiToPojoEventIds="pointsEarned"
            onTextChange=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
        <TextView
            style="@style/h2_black"
            android:text="Trade Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"></TextView>
        <EditText
            android:id="@+id/price"
            modelPojoToUi="text = toString(tradePrice) from tradeItem->view"
            modelSyncEvents="onTextChange"
            modelUiToPojo="tradePrice = text into tradeItem->view"
            modelUiToPojoEventIds="pointsEarned"
            onTextChange=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
        <TextView
            style="@style/h2_black"
            android:text="Member Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"></TextView>
        <EditText
            android:id="@+id/memPrice"
            modelPojoToUi="text = toString(memPrice) from tradeItem->view"
            modelSyncEvents="onTextChange"
            modelUiToPojo="memPrice = text into tradeItem->view"
            modelUiToPojoEventIds="pointsEarned"
            onTextChange=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

        <TextView
            android:text="points = quantity * (tradePrice - memberPrice);"
            style="@style/h2_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"></TextView>
        <TextView
            android:id="@+id/pointsEarned"
            style="@style/h2_black"
            modelPojoToUi="text = pointsEarned(.) from tradeItem->view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"></TextView>

    </LinearLayout>

</LinearLayout>
