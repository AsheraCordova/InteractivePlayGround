		"outDir": "./dist",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false
	},
	"include": [
		"./src"
	],
	"lib": [ "es2015" , "dom"]
}